{
  "name": "referral-builder",
  "private": true,
  "version": "1.0.0",
  "description": "Referral Builder technical assessment",
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "engines": {
    "node": "24.13.1"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:web dev:api",
    "dev:web": "npm run dev -w web",
    "dev:api": "npm run start:dev -w api",
    "build": "npm run build -w web && npm run build -w api",
    "lint": "npm run lint -w web && npm run lint -w api",
    "test": "npm run test -w web && npm run test -w api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3"
  }
}
